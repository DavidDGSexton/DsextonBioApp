<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.ContactPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin ="50" Padding="30" BackgroundColor="MediumAquamarine">
       
            
            <Entry x:Name="nameEntry" Placeholder="name" TextColor="White"/>
            <Entry x:Name="emailEntry" Placeholder="email" />
                <Label Text="Message" FontSize="Large" TextColor="White" />
                <Editor x:Name="messageEditor" HeightRequest="100" VerticalOptions="StartAndExpand" />
            <Button Text="Submit" x:Name="SubmitButton" Pressed="SubmitButton_Pressed" HorizontalOptions="End" VerticalOptions="End" />
                
                
         
        </StackLayout>
   </ScrollView>
    </ContentPage.Content>
</ContentPage>